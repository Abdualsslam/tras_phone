WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including devDependencies like rimraf and nest-cli)
# Ø§Ù„ØªØ¹Ø¯ÙŠÙ„ Ù‡Ù†Ø§: Ø­Ø°ÙÙ†Ø§ --only=production
